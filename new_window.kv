#:kivy 2.1.0

WindowManager:
    Start:
    Upload:
    NBM:
    Archives:


<Start>:
    name: "start"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [20, 20, 20, 20]
        spacing: 20
        
        Image:
            source: "smartrally.png"
            size_hint: None, None
            size: "1000dp", "500dp"
            pos_hint: {'center_x': 0.495, 'center_y': 0.75}
        
        Label:
            text: ""
            font_size: "30sp"
            font_name: "Roboto"
            color: 0, 0, 0, 1  
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
        
        # Button:
        #     text: "Upload Video"
        #     font_size: "24sp"
        #     font_name: "Roboto"
        #     size_hint: None, None
        #     size: "250dp", "50dp"
