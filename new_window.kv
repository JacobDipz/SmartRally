        #     border: (20, 20, 20, 20)  
        #     # on_release: app.open_filechooser()  
        #     on_release:
        #         app.root.current = "upload"
        #         root.manager.transition.direction = "left"
        
        Button:
            text: "Next Best Move"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 112/255,125/255, 106/255, 0.8
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release:
                app.root.current = "nbm"
                root.manager.transition.direction = "left"
        Button:
            text: "View Archives"
            font_size: '24sp'
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 112/255,125/255, 106/255, 1#87/255,105/255, 85/255, 100/100#0, 0.17, 0, 0.6   # Muted green
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release: 
                root.manager.current = "archives"
                root.manager.transition.direction = "left"

            # background_color: 0.3, 0.6, 0.8, 1


